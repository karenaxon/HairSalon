@{
  Layout = "_Layout";
}

@model HairSalon.Models.Employee

<h4>Add a new employee</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new { @class = "form-label" }) 
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })<br />
  @Html.ValidationMessageFor(model => model.Name) <br />
  <button type="submit" value="Add new employee" class="btn btn-primary">Submit</button>
}
<p>@Html.ActionLink("Show all employees", "Index")</p>