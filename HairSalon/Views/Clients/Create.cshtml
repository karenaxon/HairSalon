@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name, new { @class = "form-label" })
  @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })<br />
  @Html.ValidationMessageFor(model => model.Name) <br />

  @Html.LabelFor(model => model.Employee)
  @Html.DropDownList("EmployeeId")

  <button type="submit" value="Add new client" class="btn btn-success">Submit</button>
}
<p>@Html.ActionLink("Show all clients", "Index")</p>