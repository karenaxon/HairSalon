@{
  Layout = "_Layout";
}

@using HairSalon.Models;
@model List<HairSalon.Models.Client>;

<h1 class="display-4">Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No clients have been added to the list yet.</h3>
} 

<ul>
  @foreach(Client client in Model)
  {
      <li>@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) |Main stylist: @client.Employee.Name</li>
  }
</ul>

<p>@Html.ActionLink("Add a new client", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>
